package Exemplos;

import java.util.Scanner;

public class Ex1Array {

	public static void main(String[] args) {
//		Neste exemplo, devem ser armazenados o nome e o salário de 5 funcionários. 
//		Após o cadastro destas informações, deverá ser digitado o índice de reajuste salarial para todos os funcionários. 
//		O programa deverá calcular o novo salário e exibir todos os dados na tela.

		String[] nome = new String[5];
		float[] salario = new float[5];
		Scanner ler = new Scanner(System.in);

		for (int i = 0; i < nome.length; i++) {
			System.out.print("Digite o nome do funcionário: ");
			nome[i] = ler.next();
			System.out.print("Digite o salário deste funcionário (R$): ");
			salario[i] = ler.nextFloat();
		}

		System.out.println("Digite a taxa de reajuste a ser aplicada ao salário de todos os funcionário (%): ");
		double taxa = ler.nextDouble();
		double ajuste = (taxa / 100) + 1;

		for (int i = 0; i < nome.length; i++) {
			System.out.println("NOME DO FUNCIONÁRIO: " + nome[i]);
			System.out.printf("SALÁRIO: R$ %2.f%n ", salario[i]);
			System.out.printf("SALÁRIO ATUALIZADO: R$ %2.f", salario[i] * ajuste);
		}

		ler.close();
	}

}
