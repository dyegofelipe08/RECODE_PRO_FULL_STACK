package Lista02;

import java.util.Scanner;

public class Exercicio02 {

	public static void main(String[] args) {
//		Faça um programa onde o usuário irá digitar um inteiro e exiba se o número é par ou ímpar. 
//		Se for par, o número deverá ser multiplicado por 4 e a informação deverá ser exibida.
		
		
		Scanner ler = new Scanner(System.in);
		System.out.print("Digite um número inteiro qualquer: ");
		int num = ler.nextInt();
		ler.close();
		if (num%2==0) {
			int par = num * 4;
			System.out.println("Você digitou o número "+num+" e ele é par. Por isso, ele foi multiplicado por 4, resultando em: "+par);
		}else {
			System.out.println("O número "+num+" é impar!");
		}
	
		
	}

}
