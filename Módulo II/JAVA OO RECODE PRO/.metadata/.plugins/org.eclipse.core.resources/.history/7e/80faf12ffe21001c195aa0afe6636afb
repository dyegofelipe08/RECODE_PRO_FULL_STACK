package ExemplosMoodle;

import java.util.Scanner;

public class exemploFuncinarioSalario {

	public static void main(String[] args) {
		
		Scanner s = new Scanner (System.in);
		
		int codigo;
		double horas,valorHora,salario;
		
		System.out.println("Digite o código do funcionário: ");
		codigo = s.nextInt();
		System.out.println("Digite o valor da hora do funcionário "+ codigo+ ":");
		valorHora = s.nextDouble();
		System.out.println("Digite a quantidade de horas/dia trabalhadas pelo do funcionário "+ codigo+ ":");
		horas = s.nextDouble();
		
		salario = horas * valorHora * 30;
		
		System.out.println("FUNCIONÁRIO: "+codigo);
		System.out.println("SALÁRIO: R$"+salario);
		

	}

}
