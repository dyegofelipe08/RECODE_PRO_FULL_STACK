Algoritmo "calculoMedia"

Var
n1, n2, media : real
nome: caractere

Inicio
      escreval("Olá! Digite o nome do aluno: ")
      leia (nome)
      escreval ("Digite a nota 1: ")
      leia (n1)
      escreval ("Digite a nota 2: ")
      leia (n2)
      media <- (n1+n2)/2
      escreval ("A média do aluno ",nome," é: ", media,".")



Fimalgoritmo