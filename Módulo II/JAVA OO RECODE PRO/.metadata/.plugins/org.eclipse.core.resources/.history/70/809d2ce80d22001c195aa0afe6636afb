package ExemplosMoodle;
import java.util.Scanner;

public class custoTotalPecas {

	public static void main(String[] args) {
		
	//Atalho a = new Atalho();
		
		Scanner s = new Scanner (System.in);
		
		int continuar=0;
		double precoTotal=0;
		int i = 0;
		int [] cod = new int [i];
		int [] qt = new int [i];
		double [] subTotal = new double [i];
		double [] precoItem = new double [i];
		
		
		do {
			System.out.println("Digite o código do produto: ");
			cod[i]= s.nextInt();
			System.out.println("Digite o preço deste produto (R$): ");
			precoItem[i]= s.nextDouble();
			System.out.println("Digite a quantidade que você deseja deste produto: ");
			qt[i] = s.nextInt();
			subTotal[i] = precoItem[i] * qt [i];
			precoTotal = precoTotal + subTotal [i];
			i +=1;
			System.out.println("Deseja continuar comprando? (1) - SIM / (2) - NÂO");
			continuar = Atalho.lerInt();
		}while (continuar == 1);
		
		for (i=0;i<=cod.length; i++) {
			System.out.println("Produto: "+cod[i]);
			System.out.println("Preço unitário: "+precoItem[i]);
			System.out.println("Quantidade: "+qt[i]);
			System.out.println("Sub Total = "+subTotal[i]);
			System.out.println();
		}
		System.out.println();
		

	}

}
