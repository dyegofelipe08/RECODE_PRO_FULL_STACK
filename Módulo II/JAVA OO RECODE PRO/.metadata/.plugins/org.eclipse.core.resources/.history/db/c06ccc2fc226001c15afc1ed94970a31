package Lista02;

import java.util.Scanner;

public class Exercicio04 {

	public static void main(String[] args) {
//		Fazer um programa para que o usuário digite três números e o programa verifique quais números são iguais
//		(podem ser iguais dois números ou os três). Exibir mensagem de quais números são iguais.
		
		
		Scanner ler = new Scanner(System.in);
		System.out.print("Digite três números inteiros: ");
		int  n1 = ler.nextInt();
		int  n2 = ler.nextInt();
		int  n3 = ler.nextInt();
		ler.close();
		if((n1==n2) && (n1==n3) && (n2==n3)) {
			System.out.println("Os números: "+n1+", "+n2+" e "+n3+" são iguais.");
		}else if ((n1==n2) && (n1!=n3)) {
			System.out.println("O primeiro número("+n1+") é igual ao segundo ("+n2+").");
		}else if ((n1==n3) && (n1!=n2)) {
			System.out.println("O primeiro número("+n1+") é igual ao oterceiro ("+n3+").");
		}else if(n2==n3) {
			System.out.println("O segundo número("+n2+") é igual ao terceiro ("+n3+").");
		}else {
			System.out.println("Os três números são diferentes! ");
		}
			
	
		
		

	}

}
